<h1>Edit</h1>
<%#= render 'form' %>

<%= form_for  @user ,:url => "/admin/update/#{params[:id]}"  do |f|  %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>
    <p>

    <%= f.label :password %>
    <%= f.password_field :password  ,:value => @user.password %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>
    <% if session[:role] %>
        <p>
          <%= f.label :admin %><br>
          <%= f.check_box :admin %>
        </p>
    <% end %>
    <p>
      <%= f.submit %>
    </p>

<% end %>
<%= link_to 'Log out', logout_path(session[:user_id]) %> |
<%= link_to 'Back', admin_index_path %>

