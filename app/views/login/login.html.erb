<style>
  .red{
    color : red;
  }
</style>

<h1>Login</h1>
<div class="red">
<p><%= flash[:notice] if flash[:notice] %></p>
</div>
<%= form_tag('/login/verify_login') %>

<p>
  <%= label_tag("Email:") %>
  <%= text_field_tag(:email) %>
</p>

<p>
  <%= label_tag("password:") %>
  <%= password_field_tag(:password) %>
</p>

<p>
  <%= submit_tag 'login' %>
</p>

