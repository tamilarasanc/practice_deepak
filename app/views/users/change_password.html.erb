<style>
  .red{
    color : red;
  }
  .password{
    display:none;
  }
</style>



<h1>Change Password</h1>

<div class="red">
  <%= flash[:notice] if flash[:notice] %>
</div>
<%= form_tag({:action => 'update_password'},{:method => :post})  do %>
    <p>
      <%= label_tag 'old_password' %>
      <%#= text_field_tag 'exist_password' %>
      <%= password_field_tag 'exist_password'%>
    </p>
    <p>
      <%= label_tag 'new_password' %>
      <%= password_field_tag 'new_password' %>
    </p>
    <p>
      <%= label_tag 'confirm_password' %>
      <%= password_field_tag 'confirm_password' %>
    </p>
    <%= submit_tag 'update_password'%>
<% end %>
<%= link_to 'Back', show_user_path(@user) %>|
<%= link_to 'Log out', logout_path(session[:user_id]) %>|