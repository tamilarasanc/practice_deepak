<style>
  .red{
    color : red;
  }
</style>

<h1>Show</h1>
<div class="red">
<%= flash[:notice] if flash[:notice] %>
 </div>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<p>
